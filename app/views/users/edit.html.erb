<h1>Users#edit</h1>

  <div class="field">
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.text_field :password_confirmation %>

    <%= f.submit "Save changes"%>
  <% end %>
  </div>
